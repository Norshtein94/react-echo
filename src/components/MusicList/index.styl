$imageHeight = toRem(175);
.MusicList {
    display: flex;
    flex-wrap: wrap;
    .list-item {
        width: 50%;
        padding: 0 toRem(10);
        margin-bottom: toRem(8);
        .item-link {
            display: block;
            .item-image-container {
                width: 100%;
                height: $imageHeight;
                position: relative;
                overflow: hidden;
                .item-image {
                    width: 100%;
                    min-height: $imageHeight;
                }
                .item-fire {
                    position: absolute;
                    top: toRem(15);
                    right: toRem(15);
                    z-index: 10;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: toRem(22);
                    height: toRem(22);
                    font-size: toRem(16);
                    border-radius: 100%;
                    background: #fff;
                    &.fire-red {
                        color: $redColor;
                    }
                    &.fire-blue {
                        color: $blueColor;
                    }
                    &.fire-yellow {
                        color: $yellowColor;
                    }
                }
            }
            .item-name {
                width: 100%;
                color: $normalColor;
                font-size: toRem(14);
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                margin-top: toRem(8);
            }
        }
        .item-channel {
            display: flex;
            align-items: center;
            color: $infoColor;
            font-size: toRem(12);
            margin-top: toRem(5);
            .item-channel-value {
                max-width: 80%;
                width: 80%;
                color: $linkColor;
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
            }
        }
    }
}